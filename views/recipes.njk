{% extends "layout.njk" %}

{% block head %}
<title>Foodfy Vegan - Recipes</title>    
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block content %}

    <div class="filter-btn">
    <ul id="buttons">
        <li class="active" data-target="all">All</li>
        <li data-target="vegan">Vegan</li>
        <li data-target="vegetarian">Vegetarian</li>
    </ul>
    </div>
    <section class="cards">         
        {% for item in items %}
    <div class="card" data-id="{{item.dataId}}" id="{{item.id}}">
        <div class="img">
            <img src="https://images.unsplash.com/photo-{{item.id}}?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="{{item.title}}">
        </div>
        <div class="content">
            <p>{{item.title}}</p>
        </div>
        <div class="info">
            <p>By {{item.chef}}</p>
        </div>
    </div>
        {% endfor %}
    </section>   

    <div class="modal-overlay">
    <div class="modal">
        <a class="close-modal">
            Close Recipe
        </a>

        <div class="modal-content">
            <img src="" alt="">
            <div>
                <div class="title">
                    <h4></h4> 
                </div>
                <div class="info">
                    <p></p>
                </div>
                        
            </div>                                                       
        </div>                
    </div>
    </div>
    
    <script src="scripts.js"></script>

{% endblock %}